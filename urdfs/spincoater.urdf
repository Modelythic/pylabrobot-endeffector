<?xml version="1.0"?>
<robot name="spincoater">

  <!-- Base Link - Square base -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.15 0.05"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <geometry>
        <box size="0.15 0.15 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <mass value="2.0"/>
      <inertia ixx="0.004" ixy="0" ixz="0" iyy="0.004" iyz="0" izz="0.008"/>
    </inertial>
  </link>

  <!-- Catch Bowl - Square design with thin walls -->
  <!-- Bowl bottom platform -->
  <link name="bowl_bottom">
    <visual>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.002"/>
      </geometry>
      <material name="blue">
        <color rgba="0.3 0.5 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <geometry>
        <box size="0.06 0.06 0.002"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.001" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00005" ixy="0" ixz="0" iyy="0.00005" iyz="0" izz="0.00003"/>
    </inertial>
  </link>

  <joint name="base_to_bowl_bottom" type="fixed">
    <parent link="base_link"/>
    <child link="bowl_bottom"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Bowl wall - Front (positive X side) -->
  <link name="bowl_wall_front">
    <visual>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.003 0.06 0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.3 0.5 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.003 0.06 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="bowl_to_wall_front" type="fixed">
    <parent link="bowl_bottom"/>
    <child link="bowl_wall_front"/>
    <origin xyz="0.03 0 0.002" rpy="0 0 0"/>
  </joint>

  <!-- Bowl wall - Back (negative X side) -->
  <link name="bowl_wall_back">
    <visual>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.003 0.06 0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.3 0.5 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.003 0.06 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="bowl_to_wall_back" type="fixed">
    <parent link="bowl_bottom"/>
    <child link="bowl_wall_back"/>
    <origin xyz="-0.03 0 0.002" rpy="0 0 0"/>
  </joint>

  <!-- Bowl wall - Left (positive Y side) -->
  <link name="bowl_wall_left">
    <visual>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.054 0.003 0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.3 0.5 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.054 0.003 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="bowl_to_wall_left" type="fixed">
    <parent link="bowl_bottom"/>
    <child link="bowl_wall_left"/>
    <origin xyz="0 0.03 0.002" rpy="0 0 0"/>
  </joint>

  <!-- Bowl wall - Right (negative Y side) -->
  <link name="bowl_wall_right">
    <visual>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.054 0.003 0.03"/>
      </geometry>
      <material name="blue">
        <color rgba="0.3 0.5 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <geometry>
        <box size="0.054 0.003 0.03"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.015" rpy="0 0 0"/>
      <mass value="0.02"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="bowl_to_wall_right" type="fixed">
    <parent link="bowl_bottom"/>
    <child link="bowl_wall_right"/>
    <origin xyz="0 -0.03 0.002" rpy="0 0 0"/>
  </joint>

  <!-- Chuck that can spin -->
  <link name="chuck">
    <visual>
      <origin xyz="0 0 0.0025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.005"/>
      </geometry>
      <material name="silver">
        <color rgba="0.8 0.8 0.8 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.0025" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.015" length="0.005"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0.0025" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.000005"/>
    </inertial>
  </link>

  <!-- Continuous revolute joint for spinning chuck -->
  <joint name="chuck_spin" type="continuous">
    <parent link="bowl_bottom"/>
    <child link="chuck"/>
    <origin xyz="0 0 0.017" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.001" friction="0.001"/>
  </joint>

  <!-- Substrate (10mm x 10mm x 1.1mm) -->
  <link name="substrate">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.0011"/>
      </geometry>
      <material name="green">
        <color rgba="0.2 0.8 0.3 0.7"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.0011"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="0.00000001" ixy="0" ixz="0" iyy="0.00000001" iyz="0" izz="0.00000002"/>
    </inertial>
  </link>

  <!-- Prismatic joint to move substrate up and down -->
  <joint name="substrate_vertical" type="prismatic">
    <parent link="chuck"/>
    <child link="substrate"/>
    <origin xyz="0 0 0.00555" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0.00005" upper="0.005" effort="10" velocity="0.01"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

</robot>